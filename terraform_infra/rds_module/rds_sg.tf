resource "aws_security_group" "rds_sg" {
  name        = "mini-project-rds-sg"
  description = "Allow MySQL traffic from bastion/backend"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = 3306
    to_port     = 3306
    protocol    = "tcp"
    cidr_blocks = ["10.0.0.0/16"] # adjust based on your internal network
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}